/* 商品销售属性筛选区域 */
.attrNameList {
  position: relative;
  z-index: 2;
  display: flex;
  height: 80rpx;
  background-color: #ececec;
}
.attrNameList .saleAttrItem {
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  margin: 0 10rpx;
  transition: 0.3s ease;
}
.attrNameList .saleAttrItem.selected-attrName {
  background-color: white;
  border-radius: 20rpx 20rpx 0 0;
}
.saleAttrVauleArea {
  display: flex;
  flex-wrap: wrap;
  width: 750rpx;
  background-color: white;
}
.saleAttrVauleArea .attrValueItem {
  padding: 20rpx;
  border: 2rpx solid transparent;
  flex-shrink: 0;
}
.saleAttrVauleArea .attrValueItem.selectedValue {
  color: #e1251b;
}
/* 商品列表区域 */
.spuListArea .spuItem {
  display: flex;
}
.spuListArea .spuItem .imgWrap {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  width: 350rpx;
}
.spuListArea .spuItem .imgWrap > image {
  width: 50%;
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.3);
}
.spuListArea .spuItem .spuItemDes {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 10rpx 0;
}
.spuListArea .spuItem .spuItemDes .spuPrice {
  color: #e1251b;
  font-size: 40rpx;
}

